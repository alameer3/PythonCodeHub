# ðŸŒ Ù‚Ø§Ø¹Ø¯Ø© Ubuntu
FROM ubuntu:22.04

# âœ… ØªØ¬Ø§ÙˆØ² Ø§Ù„Ø¥Ø¹Ø¯Ø§Ø¯ Ø§Ù„ØªÙØ§Ø¹Ù„ÙŠ + ØªØ«Ø¨ÙŠØª tzdata ÙˆØªØ­Ø¯ÙŠØ¯ Ø§Ù„Ù…Ù†Ø·Ù‚Ø© Ø§Ù„Ø²Ù…Ù†ÙŠØ©
ENV DEBIAN_FRONTEND=noninteractive
RUN apt update && apt install -y tzdata && \
    ln -fs /usr/share/zoneinfo/Asia/Riyadh /etc/localtime && \
    dpkg-reconfigure -f noninteractive tzdata

# ðŸ› ï¸ ØªØ«Ø¨ÙŠØª Ø§Ù„Ø£Ø¯ÙˆØ§Øª Ø§Ù„Ø£Ø³Ø§Ø³ÙŠØ© ÙˆØ³Ø·Ø­ Ø§Ù„Ù…ÙƒØªØ¨ Ùˆ VNC Ùˆ noVNC Ùˆ Firefox
RUN apt update && apt install -y \
    lxde \
    x11vnc \
    xvfb \
    git \
    wget \
    python3 \
    python3-pip \
    firefox \
    curl \
    net-tools \
    netcat \
    # âœ… ØªÙ… Ø­Ø°Ù novnc Ù„Ù…Ù†Ø¹ ØªØ¹Ø§Ø±Ø¶ Ø§Ù„Ù…Ø³Ø§Ø±Ø§Øª (Ø³ÙŠØªÙ… ØªØ«Ø¨ÙŠØªÙ‡ Ù…Ù† git Ø£Ø¯Ù†Ø§Ù‡)
    tzdata \
    && apt clean

# ðŸ¦Š ØªØ«Ø¨ÙŠØª Firefox ÙŠØ¯ÙˆÙŠÙ‹Ø§ Ø¨Ø¯ÙˆÙ† Snap
RUN apt remove -y firefox || true && \
    wget -O /tmp/firefox.tar.bz2 "https://download.mozilla.org/?product=firefox-latest&os=linux64&lang=ar" && \
    tar -xjf /tmp/firefox.tar.bz2 -C /opt/ && \
    ln -s /opt/firefox/firefox /usr/bin/firefox

# ðŸ” Ø¥Ø¹Ø¯Ø§Ø¯ ÙƒÙ„Ù…Ø© Ù…Ø±ÙˆØ± VNC
RUN mkdir -p /root/.vnc && \
    x11vnc -storepasswd 123456 /root/.vnc/passwd

# ðŸŒ€ ØªØ­Ù…ÙŠÙ„ noVNC Ùˆ websockify
RUN rm -rf /opt/noVNC && \
    git clone --branch v1.2.0 https://github.com/novnc/noVNC.git /opt/noVNC && \
    git clone https://github.com/novnc/websockify /opt/noVNC/utils/websockify && \
    chmod +x /opt/noVNC/utils/launch.sh

# ðŸŒ ØªØ­Ù…ÙŠÙ„ cloudflared
RUN wget -q https://github.com/cloudflare/cloudflared/releases/latest/download/cloudflared-linux-amd64 -O /usr/local/bin/cloudflared && \
    chmod +x /usr/local/bin/cloudflared

# â±ï¸ ØªØ¹ÙŠÙŠÙ† Ø§Ù„ØªÙˆÙ‚ÙŠØª ÙŠØ¯ÙˆÙŠÙ‹Ø§ Ù„ØªØ¬Ù†Ø¨ Ø§Ù„ØªÙØ§Ø¹Ù„
RUN ln -sf /usr/share/zoneinfo/Asia/Riyadh /etc/localtime && \
    echo "Asia/Riyadh" > /etc/timezone && \
    DEBIAN_FRONTEND=noninteractive apt install -y tzdata

# âœ… Ø¥ØµÙ„Ø§Ø­ ØµÙ„Ø§Ø­ÙŠØ§Øª Ù…Ø¬Ù„Ø¯ X11 Ù„ØªØ¬Ù†Ø¨ ØªØ­Ø°ÙŠØ± Xvfb
RUN mkdir -p /tmp/.X11-unix && \
    chown root:root /tmp/.X11-unix && \
    chmod 1777 /tmp/.X11-unix

# ðŸ–¥ï¸ Ù†Ø³Ø® Ø³ÙƒØ±Ø¨Øª Ø§Ù„ØªØ´ØºÙŠÙ„
COPY ./start.sh /start.sh
RUN chmod +x /start.sh

# âœ… Ø¥Ø¹Ø¯Ø§Ø¯ autostart Ù„ØªØ´ØºÙŠÙ„ Firefox ØªÙ„Ù‚Ø§Ø¦ÙŠÙ‹Ø§ Ù…Ø¹ Ø³Ø·Ø­ Ø§Ù„Ù…ÙƒØªØ¨ (Ø¯Ø§Ø®Ù„ Ø¬Ù„Ø³Ø© LXDE)
RUN mkdir -p /root/.config/lxsession/LXDE && \
    echo "@firefox --no-sandbox --setDefaultBrowser" >> /root/.config/lxsession/LXDE/autostart && \
    echo "@lxterminal" >> /root/.config/lxsession/LXDE/autostart

# ðŸ”¥ Ø¨Ø¯Ø¡ Ø§Ù„ØªØ´ØºÙŠÙ„
CMD ["/start.sh"]